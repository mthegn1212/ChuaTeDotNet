@model IEnumerable<BatDongSan.Models.News>

@{
    ViewData["Title"] = "News";
    Layout = "_Layout1";
}

<div>
    <div class="container">
        <main role="main" class="pb-3">
            <section class="ftco-section" id="blog-section">
                <div class="container">
                    @if (Model != null && Model.Any())
                    {
                        <div class="row">
                            @foreach (var blog in Model)
                            {
                                <div class="col-md-4 mb-4">
                                    <div class="card">
                                        <a href="@Url.Action("News", "News", new { id = blog.Id })">
                                            <img src="@Url.Content(blog.ImagePath)" alt="Uploaded Image" style="width: 100%; height: auto;" />
                                        </a>
                                        <div class="card-body">
                                            <h5 class="card-title">
                                                <a href="@Url.Action("News", "News", new { id = blog.Id })">@blog.Title</a>
                                            </h5>
                                            <p class="card-text">
                                                @(blog.Content?.Length > 100
                                                    ? blog.Content.Substring(0, 100) + "..."
                                                    : blog.Content)
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-12 text-center">
                                <p>Không có bài viết nào để hiển thị.</p>
                            </div>
                        </div>
                    }
                </div>
            </section>
        </main>
    </div>
</div>
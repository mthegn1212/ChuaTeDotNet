@model BatDongSan.Models.SignUpViewModel

@{
ViewData["Title"] = "Sign Up";
Layout = "_layout1";
}

<body class="ftco-section">
<div class="container mb-5 mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div>
                <h2 class="text-center">Sign Up</h2>
                @if (ViewData.ModelState != null && ViewData.ModelState[""]?.Errors?.Any() == true)
                {
                <div class="alert alert-danger">
                    @ViewData.ModelState[""].Errors.FirstOrDefault()?.ErrorMessage
                </div>
                }
                <form asp-action="SignUp" method="post">
                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label">User Name</label>
                        <input asp-for="UserName" class="form-control" placeholder="Enter your user name" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Sign Up</button>
                </form>
            </div>
        </div>
    </div>
</div>
</body>

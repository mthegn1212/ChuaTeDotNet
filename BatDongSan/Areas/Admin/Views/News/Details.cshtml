@model BatDongSan.Models.News

@{
Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
ViewData["Title"] = "News Details";
}

<h1>News Details</h1>

<div>
    <strong>Title:</strong> @Model.Title
</div>
<div>
    <strong>Content:</strong> @Model.Content
</div>
<div>
    <strong>Detail:</strong> @Model.Detail
</div>
<div>
    <strong>Image:</strong> <img src="@Model.ImagePath" alt="Image" />
</div>
<div>
    <strong>Link:</strong> @Model.Link
</div>
<div>
    <strong>Meta:</strong> @Model.Meta
</div>
<div>
    <strong>Hide:</strong> @(Model.Hide ? (Model.Hide ? "Yes" : "No") : "Not Set")
</div>
<div>
    <strong>Order:</strong> @Model.Order
</div>
<div>
    <strong>Date Up:</strong> @Model.DateUp
</div>

<a href="@Url.Action("Index", "News")" class="btn btn-secondary">Back to List</a>

@model BatDongSan.Models.News

@{
Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
ViewData["Title"] = "Edit News";
}

<h1>Edit News</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Title" class="control-label">Title</label>
        <input asp-for="Title" class="form-control" value="@Model.Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Content" class="control-label">Content</label>
        <textarea asp-for="Content" class="form-control">@Model.Content</textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Detail" class="control-label">Detail</label>
        <textarea id="Details" asp-for="Detail" class="form-control">@Model.Detail</textarea>
        <span asp-validation-for="Detail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImagePath" class="control-label">Image</label>
        <input type="file" asp-for="ImagePath" class="form-control" />
        <span asp-validation-for="ImagePath" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Link" class="control-label">Link</label>
        <input asp-for="Link" class="form-control" value="@Model.Link" />
        <span asp-validation-for="Link" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Meta" class="control-label">Meta</label>
        <input asp-for="Meta" class="form-control" value="@Model.Meta" />
        <span asp-validation-for="Meta" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Hide" class="control-label">Hide</label>
        <input asp-for="Hide" type="checkbox" checked="@Model.Hide" />
        <span asp-validation-for="Hide" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Order" class="control-label">Order</label>
        <input asp-for="Order" class="form-control" value="@Model.Order" />
        <span asp-validation-for="Order" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a href="@Url.Action("Index", "News")" class="btn btn-secondary">Back to List</a>

<script src="~/ckeditor/ckeditor.js"></script>
<script>
    CKEDITOR.replace('Details', {
        filebrowserBrowseUrl: '/ckeditor/ckeditor.html',  // Đường dẫn tới CKFinder
        filebrowserUploadUrl: '/ckeditor/upload',          // Đường dẫn xử lý tải lên tệp
        filebrowserUploadMethod: 'form',                    // Phương thức tải lên
    });
</script>

